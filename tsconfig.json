{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "outDir": "./dist",
    "types": ["node", "jest"]
  },
  "exclude": ["typings", "tests", "dist", "node_modules"]
}
